@model List<PersonVM>
@{
    ViewData["Title"] = "Index";
}

<h1>Lista av personer som bor i den stad : </h1>

@if (Model.Count() != 0)
{
    <h3> Stad : @ViewBag.CityName</h3>

    <table class="table">
        <thead>
            <tr>
                <td>ID</td>
                <th>Name</th>
                <th>EfterName</th>
                <th>Age</th>
                <th>PhoneNumber</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.EfterName</td>
                    <td>@item.age</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="DeletePeople" asp-route-cityName="@ViewBag.CityName" asp-route-personId="@item.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h3>Inga Personer Bor i @ViewBag.CityName</h3>
}